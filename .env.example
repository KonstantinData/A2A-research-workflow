# === Google OAuth (v2-only) ===
GOOGLE_CLIENT_ID_V2=
GOOGLE_CLIENT_SECRET_V2=
GOOGLE_REFRESH_TOKEN=
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
# Legacy/JSON variants are unsupported and will cause a hard error.

# === HubSpot ===
HUBSPOT_ACCESS_TOKEN=
HUBSPOT_PORTAL_ID=

# === SMTP / IMAP ===
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=bot@example.com
SMTP_PASS=
SMTP_SECURE=tls
SMTP_FROM=bot@example.com
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=bot@example.com
IMAP_PASS=
IMAP_FOLDER=INBOX

# === Calendar Polling Window ===
GOOGLE_CALENDAR_IDS=primary
CAL_LOOKAHEAD_DAYS=14
CAL_LOOKBACK_DAYS=1

# === Feature Flags ===
USE_PUSH_TRIGGERS=0
ENABLE_SUMMARY=1
ENABLE_GRAPH_STORAGE=0
ATTACH_PDF_TO_HUBSPOT=1

# === Exports & Storage ===
OUTPUT_DIR=output
TASKS_DB_URL=sqlite:///data/tasks.db

# === Triggers & Policies ===
TRIGGER_WORDS_FILE=config/trigger_words.txt
ALLOWLIST_EMAIL_DOMAIN=example.com
A2A_TEST_MODE=0


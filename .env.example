# === Google OAuth (People API + Calendar) ===
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# optional alternative Keynamen (wie im Screenshot)
# werden automatisch erkannt, müssen NICHT zusätzlich gesetzt werden
GOOGLE_CLIENT_ID_V2=
GOOGLE_CLIENT_SECRET_V2=
GOOGLE_REFRESH_TOKEN=
GOOGLE_TOKEN_URI=https://oauth2.googleapis.com/token
# optional: gesamtes Client-JSON als String
# GOOGLE_OAUTH_JSON=

# === HubSpot ===
HUBSPOT_ACCESS_TOKEN=
HUBSPOT_PORTAL_ID=

# === SMTP / IMAP ===
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=bot@example.com
SMTP_PASS=
SMTP_SECURE=tls
MAIL_FROM=bot@example.com
IMAP_HOST=imap.example.com
IMAP_PORT=993
IMAP_USER=bot@example.com
IMAP_PASS=
IMAP_FOLDER=INBOX

# === Calendar Window ===
CALENDAR_MINUTES_BACK=1440
CALENDAR_MINUTES_FWD=10080

# === Feature Flags ===
USE_PUSH_TRIGGERS=0
ENABLE_SUMMARY=1
ENABLE_GRAPH_STORAGE=0
ATTACH_PDF_TO_HUBSPOT=1

# === Exports & Storage ===
OUTPUT_DIR=output
TASKS_DB_URL=sqlite:///data/tasks.db

# === Triggers & Policies ===
TRIGGER_WORDS_FILE=config/trigger_words.txt
ALLOWLIST_EMAIL_DOMAIN=example.com
A2A_TEST_MODE=0

